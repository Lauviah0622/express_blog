<!DOCTYPE html>
<html lang="en">

<%-    include('modules/head') %>

<body>
    <div class="wrapper">
        <%-    include('modules/header') %>
        <!-- login is test -->
        <main class="main">
            <%-    include('modules/background') %>

            <div class="posts">
                <% for (let article of articles) { %>


                    <div class="post">
                        <h3 class="post__title">
                            <span>
                                <%= article.title%>
                            </span>
                            <div>
                                
                            </div>
                        </h3>
                        <div class="post__info">
                            <span class="time"><%= article.createdAt.toLocaleString() %></span>
                        </div>
                        <div class="post__content">
                            <%- article.content %>
                        </div>
                        <a href="article/<%= article.id %>">
                            <div class="post__readmore">
                                readmore
                            </div>
                        </a>
                    </div>
                <% } %> 
            </div>
        </main>
        <%-    include('modules/footer') %>
    </div>
</body>

</html>