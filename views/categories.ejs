<!DOCTYPE html>
<html lang="en">

<%-    include('modules/head') %>

<body>
    <div class="wrapper">
        <%-    include('modules/header') %>
        <!-- login is test -->
        <main class="main">
            <%-    include('modules/background') %>

            <div class="posts">
                <% for (let category of categories) { %>

                <div class="cate">
                    <h2><%= category.name%></h2>
                </div>
                <% if (category.Articles.length > 0) {
                        for (let article of category.Articles) {%>
                <div class="post">
                    <h3 class="post__title ">
                        <div class="name">
                            <a href="/article/<%= article.id %>">
                                <span>
                                    <%= article.title %>
                                </span>
                            </a>
                        </div>
                        <div>
                            <span class="time"><%= article.createdAt.toLocaleString() %></span>
                        </div>
                    </h3>
                </div>
                <% }
                    } %>

                <% } %>

            </div>
        </main>
        <%-    include('modules/footer') %>
    </div>
</body>

</html>